<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true">
        <shape>
            <stroke android:color="@android:color/white"
                android:width="1dp"/>
            <padding
                android:left="2dp"
                android:right="2dp"
                android:bottom="2dp"
                android:top="2dp" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <stroke android:color="@color/mainRedColor"
                android:width="1dp"/>
            <padding
                android:left="2dp"
                android:right="2dp"
                android:bottom="2dp"
                android:top="2dp" />
        </shape>
    </item>
</selector>