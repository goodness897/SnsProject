<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <include
            android:id="@+id/user_info_layout"
            layout="@layout/view_user_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

        <RelativeLayout
            android:id="@+id/post_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/image_post_first_image"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@+id/text_post_content"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/image_post_second_image"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@id/image_post_first_image"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/image_post_third_image"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@id/image_post_second_image"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <TextView
                android:id="@+id/text_post_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="@dimen/drawable_padding_left"
                android:layout_marginTop="8dp" />

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>